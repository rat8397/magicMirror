    .form_container
        form(action=routes.edit_clothes_info(loggedUser._id,clothes_id), method="post",enctype = "multipart/form-data")
            .color
                .color
                    input.color(type="radio" id="red" name="color" value="빨강")
                    label.color(for="red")|RED
                .color                  
                    input.color(type="radio" id="orange" name="color" value="주황")
                    label.color(for="orange")|ORANGE
                .color                 
                    input.color(type="radio" id="yellow" name="color" value="노랑")
                    label.color(for="yellow")|YELLOW
                .color                
                    input.color(type="radio" id="green" name="color" value="초록")
                    label.color(for="green")|GREEN
                .color             
                    input.color(type="radio" id="blue" name="color" value="파랑")
                    label.color(for="blue")|BLUE
                .color                
                    input.color(type="radio" id="darkblue" name="color" value="군청")
                    label.color(for="darkblue")|DARKBLUE
                .color               
                    input.color(type="radio" id="purple" name="color" value="보라")
                    label.color(for="purple")|PURPLE
