mixin clothesEditBlock(clothes = {})
    .clothesBlock
        case clothes.category
            when 'outer'
                .img_form
                    .img_detail
                        img.img_edit(src=clothes.clothesFile height=100, weight=100)
                    .span_img_text
                        .span_text_object
                            span 색상
                            span.img_color=clothes.color
                        .span_text_object
                            span 카테고리
                            span.img_category=clothes.category
                        .span_text_object
                            span 상세카테고리
                            span.img_category_detail=clothes.category_detail
                        .span_text_object
                            span 계절
