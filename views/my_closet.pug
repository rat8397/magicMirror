extends ./layouts/main.pug
include mixins/clothesBlock
block content
    .showing_closet
        each item in clothes
            +clothesBlock({
                id:item.id,
                color:item.color,
                category:item.category,
                category_detail:item.category_detail,
                season:item.season,
                clothesFile:item.fileUrl
            })
    .form_container
        form(action=routes.login, method="get")
            button.edit
                a(href=routes.upload(loggedUser._id)) 등록하기
            button.edit
                a(href=routes.edit(loggedUser._id)) 편집하기                    